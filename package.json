{
  "name": "student-notation",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Interactive music-notation grid built with Vite and Tone.js.",
  "author": "Quinn Fleming",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iambored456/Student-Notation.git"
  },
  "homepage": "https://iambored456.github.io/Student-Notation/",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint \"src/**/*.{js,ts}\" \"vite.config.ts\"",
    "lint:css": "stylelint \"style/**/*.css\" \"*.css\"",
    "lint:html": "htmlhint \"*.html\"",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js:fix": "eslint \"src/**/*.{js,ts}\" \"vite.config.ts\" --fix",
    "lint:css:fix": "stylelint \"style/**/*.css\" \"*.css\" --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "pitchy": "^4.1.0",
    "tonal": "^6.4.2",
    "tone": "^15.0.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.2",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "htmlhint": "^1.7.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^6.1.1"
  }
}
